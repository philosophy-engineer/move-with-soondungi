{
  "name": "server",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --watch --loader ts-node/esm src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "mg:gen": "typeorm-ts-node-esm -d src/common/database/typeorm/data-source.ts migration:generate src/common/database/typeorm/migrations/auto",
    "mg:run": "typeorm-ts-node-esm -d src/common/database/typeorm/data-source.ts migration:run",
    "mg:revert": "typeorm-ts-node-esm -d src/common/database/typeorm/data-source.ts migration:revert",
    "mg:show": "typeorm-ts-node-esm -d src/common/database/typeorm/data-source.ts migration:show"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/typeorm": "^11.0.0",
    "@workspace/shared": "workspace:*",
    "pg": "^8.13.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.3",
    "@types/node": "^25.1.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "ts-node": "^10.9.2",
    "typescript": "catalog:"
  }
}
